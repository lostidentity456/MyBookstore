@model CreateOrderViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container my-5">
    <h2 class="fw-bolder mb-4">Checkout</h2>
    <form asp-action="Index" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="mb-3">Shipping Address</h4>
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label asp-for="ShippingAddress" class="form-label"></label>
                                <input asp-for="ShippingAddress" class="form-control" />
                                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ShippingCity" class="form-label"></label>
                                <input asp-for="ShippingCity" class="form-control" />
                                <span asp-validation-for="ShippingCity" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ShippingState" class="form-label"></label>
                                <input asp-for="ShippingState" class="form-control" />
                                <span asp-validation-for="ShippingState" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Place Order</button>
                </div>
            </div>
        </div>
    </form>
</div>