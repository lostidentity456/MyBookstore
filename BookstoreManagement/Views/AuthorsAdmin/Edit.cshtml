@model OnlineBookstoreManagement.Models.AuthorViewModel
@{
    ViewData["Title"] = "Edit Author";
}
<div class="container my-4">
    <h2>@ViewData["Title"]</h2>
    <form asp-action="Edit" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label class="form-label">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Nationality</label>
            <input asp-for="Nationality" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Biography</label>
            <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
        </div>
        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label class="form-check-label">Active</label>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>


