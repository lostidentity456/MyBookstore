@model List<OnlineBookstoreManagement.Models.CategoryViewModel>
@{
    ViewData["Title"] = "Manage Categories";
}
<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">New Category</a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Active</th>
                <th style="width:180px;"></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@(c.IsActive ? "Yes" : "No")</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@c.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this category?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>


