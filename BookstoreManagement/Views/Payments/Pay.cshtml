@model CreatePaymentDto
@{
    ViewData["Title"] = "Payment";
}
<div class="container my-5" style="max-width:720px;">
    <h2 class="mb-4">Complete Your Payment</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="Pay" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="OrderId" />
        <input type="hidden" asp-for="Amount" />
        <input type="hidden" asp-for="Currency" />
        <input type="hidden" asp-for="PaymentMethod" />

        <div class="card">
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Card Number</label>
                    <input name="PaymentDetails.CardNumber" class="form-control" placeholder="4242 4242 4242 4242" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Card Holder Name</label>
                    <input name="PaymentDetails.CardHolderName" class="form-control" />
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Expiry Month</label>
                        <input name="PaymentDetails.ExpiryMonth" class="form-control" placeholder="MM" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Expiry Year</label>
                        <input name="PaymentDetails.ExpiryYear" class="form-control" placeholder="YYYY" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">CVV</label>
                        <input name="PaymentDetails.CVV" class="form-control" />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Notes (optional)</label>
                    <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <div class="fs-5">Amount: <strong>@Model.Amount.ToString("C")</strong></div>
                    <button type="submit" class="btn btn-primary">Pay Now</button>
                </div>
            </div>
        </div>
    </form>
</div>


