@{
    ViewData["Title"] = "About Us";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-center mb-5">About Online Bookstore</h1>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-lg-8 mx-auto">
            <p class="lead text-center">
                Welcome to Online Bookstore, your premier destination for discovering and purchasing books from around the world. 
                We are passionate about connecting readers with their next great read.
            </p>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-4 text-center mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <i class="fas fa-book fa-3x text-primary mb-3"></i>
                    <h4>Wide Selection</h4>
                    <p class="text-muted">Thousands of books across all genres, from bestsellers to rare finds.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <i class="fas fa-shipping-fast fa-3x text-primary mb-3"></i>
                    <h4>Fast Delivery</h4>
                    <p class="text-muted">Quick and reliable shipping to get your books to you as soon as possible.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 text-center mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <i class="fas fa-star fa-3x text-primary mb-3"></i>
                    <h4>Quality Service</h4>
                    <p class="text-muted">Dedicated customer service and quality assurance for every purchase.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h3 class="text-center mb-4">Our Mission</h3>
            <p class="text-center">
                At Online Bookstore, we believe that books have the power to transform lives, inspire creativity, 
                and bring people together. Our mission is to make quality literature accessible to everyone, 
                fostering a love of reading and learning in our community.
            </p>
        </div>
    </div>
</div>
