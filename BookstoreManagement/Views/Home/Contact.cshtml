@{
    ViewData["Title"] = "Contact Us";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-center mb-5">Contact Us</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="text-center mb-4">Get in Touch</h3>
                    <p class="text-center text-muted mb-4">
                        Have questions about our books, orders, or services? We'd love to hear from you!
                    </p>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h5><i class="fas fa-envelope text-primary me-2"></i>Email</h5>
                            <p>support@onlinebookstore.com</p>
                            
                            <h5><i class="fas fa-phone text-primary me-2"></i>Phone</h5>
                            <p>+1 (555) 123-4567</p>
                            
                            <h5><i class="fas fa-clock text-primary me-2"></i>Business Hours</h5>
                            <p>
                                Monday - Friday: 9:00 AM - 6:00 PM<br>
                                Saturday: 10:00 AM - 4:00 PM<br>
                                Sunday: Closed
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fas fa-map-marker-alt text-primary me-2"></i>Address</h5>
                            <p>
                                123 Book Street<br>
                                Library City, LC 12345<br>
                                United States
                            </p>
                            
                            <h5><i class="fas fa-headset text-primary me-2"></i>Customer Support</h5>
                            <p>Available 24/7 for urgent inquiries</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
