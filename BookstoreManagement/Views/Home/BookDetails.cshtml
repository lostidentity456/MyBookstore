@model BookViewModel

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Books">Books</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Title">
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center rounded shadow" style="height: 400px;">
                    <i class="fas fa-book fa-5x text-muted"></i>
                </div>
            }
        </div>
        <div class="col-md-8">
            <h1 class="display-5 fw-bold">@Model.Title</h1>
            <p class="lead text-muted">by <a asp-action="Books" asp-route-authorId="@Model.AuthorId" class="text-decoration-none">@Model.AuthorName</a></p>
            
            <div class="mb-3">
                <span class="badge bg-primary">@Model.CategoryName</span>
                @if (Model.IsFeatured)
                {
                    <span class="badge bg-warning">Featured</span>
                }
            </div>

            <div class="mb-3">
                @if (Model.AverageRating > 0)
                {
                    <div class="d-flex align-items-center mb-2">
                        <div class="text-warning me-2">
                            @for (int i = 0; i < 5; i++)
                            {
                                if (i < Math.Floor(Model.AverageRating))
                                {
                                    <i class="fas fa-star"></i>
                                }
                                else if (i < Model.AverageRating)
                                {
                                    <i class="fas fa-star-half-alt"></i>
                                }
                                else
                                {
                                    <i class="far fa-star"></i>
                                }
                            }
                        </div>
                        <span class="text-muted">@Model.AverageRating.ToString("F1") out of 5 (@Model.TotalReviews reviews)</span>
                    </div>
                }
            </div>

            <div class="mb-4">
                <h3 class="text-primary">
                    @if (Model.DiscountPrice.HasValue)
                    {
                        <span class="text-decoration-line-through text-muted me-2">$@Model.Price.ToString("F2")</span>
                        <span class="text-danger">$@Model.DiscountPrice.Value.ToString("F2")</span>
                    }
                    else
                    {
                        <span>$@Model.Price.ToString("F2")</span>
                    }
                </h3>
            </div>

            <div class="mb-4">
                <h5>Description</h5>
                <p>@(string.IsNullOrEmpty(Model.Description) ? "No description available." : Model.Description)</p>
            </div>

            <div class="row mb-4">
                <div class="col-sm-6">
                    <h6>Book Details</h6>
                    <ul class="list-unstyled">
                        <li><strong>ISBN:</strong> @Model.ISBN</li>
                        <li><strong>Publisher:</strong> @Model.Publisher</li>
                        <li><strong>Publication Date:</strong> @Model.PublicationDate.ToString("MMMM dd, yyyy")</li>
                        <li><strong>Language:</strong> @Model.Language</li>
                        <li><strong>Pages:</strong> @Model.NumberOfPages</li>
                        @if (!string.IsNullOrEmpty(Model.Edition))
                        {
                            <li><strong>Edition:</strong> @Model.Edition</li>
                        }
                    </ul>
                </div>
                <div class="col-sm-6">
                    <h6>Availability</h6>
                    <ul class="list-unstyled">
                        <li>
                            <strong>Stock:</strong> 
                            @if (Model.IsInStock)
                            {
                                <span class="text-success">@Model.StockQuantity items available</span>
                            }
                            else
                            {
                                <span class="text-danger">Out of Stock</span>
                            }
                        </li>
                        @if (Model.IsLowStock && Model.IsInStock)
                        {
                            <li><span class="text-warning">⚠️ Low Stock</span></li>
                        }
                    </ul>
                </div>
            </div>

            <div>
                @if (Model.IsInStock)
                {
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="bookId" value="@Model.Id" />

                        <div class="d-flex">
                            <input class="form-control text-center me-3" name="quantity" type="number" value="1" min="1" max="@Model.StockQuantity" style="max-width: 5rem" />

                            <button class="btn btn-primary flex-shrink-0" type="submit">
                                <i class="bi-cart-fill me-1"></i>
                                Add to cart
                            </button>

                            <button type="button" class="btn btn-outline-secondary ms-2" onclick="addToWishlist(@Model.Id)">
                                <i class="bi-heart-fill me-1"></i>
                            </button>
                        </div>
                    </form>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg" disabled>
                        <i class="fas fa-times"></i> Out of Stock
                    </button>
                }
            </div>
        </div>
    </div>
</div>

