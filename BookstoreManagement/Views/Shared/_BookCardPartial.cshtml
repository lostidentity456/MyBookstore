@model BookViewModel

<div class="col mb-5">
    <div class="card h-100">
        @if (Model.DiscountPrice.HasValue)
        {
            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
        }
        <a asp-action="BookDetails" asp-route-id="@Model.Id">
            <img class="card-img-top" src="@(Model.ImageUrl ?? "https://dummyimage.com/450x300/dee2e6/6c757d.jpg")" alt="@Model.Title" />
        </a>
        <div class="card-body p-4">
            <div class="text-center">
                <h5 class="fw-bolder">@Model.Title</h5>
                <p class="small text-muted">by @Model.AuthorName</p>
                @if (Model.DiscountPrice.HasValue)
                {
                    <span class="text-muted text-decoration-line-through">$@Model.Price.ToString("F2")</span>
                    <span>$@Model.DiscountPrice.Value.ToString("F2")</span>
                }
                else
                {
                    <span>$@Model.Price.ToString("F2")</span>
                }
            </div>
        </div>
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="BookDetails" asp-route-id="@Model.Id">View Details</a></div>
        </div>
    </div>
</div>