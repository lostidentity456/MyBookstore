@model IEnumerable<OrderViewModel>
@{
    ViewData["Title"] = "My Orders";
}

<div class="container my-5">
    <h2 class="fw-bolder mb-4">My Order History</h2>

    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Order Number</th>
                                <th>Date Placed</th>
                                <th class="text-end">Total Amount</th>
                                <th class="text-center">Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td><strong>@order.OrderNumber</strong></td>
                                    <td>@order.CreatedAt.ToString("MMMM dd, yyyy")</td>
                                    <td class="text-end">$@order.TotalAmount.ToString("F2")</td>
                                    <td class="text-center"><span class="badge bg-primary rounded-pill">@order.Status</span></td>
                                    <td class="text-end">
                                        <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-dark">View Details</a>
                                        @if (order.Status == "Pending" || order.Status == "Confirmed")
                                        {
                                            <form asp-controller="Order" asp-action="Cancel" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@order.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger ms-2" onclick="return confirm('Cancel this order?');">Cancel</button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5 border rounded bg-light">
            <i class="bi bi-box-seam" style="font-size: 3rem;"></i>
            <h3 class="text-muted mt-3">No Orders Found</h3>
            <p>You have not placed any orders yet.</p>
            <a asp-controller="Home" asp-action="Books" class="btn btn-primary mt-2">Start Shopping</a>
        </div>
    }
</div>